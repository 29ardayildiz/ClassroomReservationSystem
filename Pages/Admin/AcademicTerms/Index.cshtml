@page
@model ClassroomReservationSystem.Pages.Admin.AcademicTerms.IndexModel
@{
    ViewData["Title"] = "Academic Terms";

    var searchTerm = Request.Query["search"].ToString()?.ToLower() ?? "";
    var filteredTerms = Model.AcademicTerms
    .Where(u => string.IsNullOrEmpty(searchTerm) || u.Name.ToLower().Contains(searchTerm))
    .OrderBy(u => u.Name)
    .ToList();
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <form method="get" asp-page="Index">
            <div class="input-group" style="max-width: 400px;">
                <input type="text" name="search" class="form-control" placeholder="Search academic term..."
                    value="@Request.Query["search"]" />
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search"></i> Search
                </button>
            </div>
        </form>
        <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#createAcademicTermModal">
            <i class="bi bi-plus-circle me-1"></i> Add New Term
        </button>
    </div>

    @if (!string.IsNullOrWhiteSpace(Request.Query["search"]))
    {
        <div class="alert alert-info">
            Showing results matching "@Request.Query["search"]".
            <a href="@Url.Page("Index")" class="btn btn-sm btn-outline-secondary ms-2">Clear Filter</a>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="alert alert-info">
            @Model.StatusMessage
        </div>
    }
    <div class="table-responsive shadow rounded">
        <table class="table table-striped table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th scope="col">Term Name</th>
                    <th scope="col">Start Date</th>
                    <th scope="col">End Date</th>
                    <th scope="col" class="text-center">Active</th>
                    <th scope="col" class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in filteredTerms)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.StartDate.ToString("dd/MM/yyyy")</td>
                        <td>@item.EndDate.ToString("dd/MM/yyyy")</td>
                        <td class="text-center">
                            @if (item.IsActive)
                            {
                                <i class="bi bi-check-circle-fill text-success"></i>
                            }
                            else
                            {
                                <i class="bi bi-x-circle-fill text-danger"></i>
                            }
                        </td>
                        <td class="text-end">
                            <button type="button" class="btn btn-sm btn-warning me-2 edit-btn" data-bs-toggle="modal"
                                data-bs-target="#editAcademicTermModal" data-id="@item.Id" data-name="@item.Name"
                                data-startdate="@item.StartDate.ToString("yyyy-MM-dd")"
                                data-enddate="@item.EndDate.ToString("yyyy-MM-dd")" data-isactive="@item.IsActive">
                                <i class="bi bi-pencil-square"></i> Edit
                            </button>
                            <button type="button" class="btn btn-sm btn-danger delete-btn" data-bs-toggle="modal"
                                data-bs-target="#deleteAcademicTermModal" data-id="@item.Id" data-name="@item.Name">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="createAcademicTermModal" tabindex="-1" aria-labelledby="createAcademicTermModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <form method="post" asp-page-handler="Create">
                <div class="modal-header bg-warning text-white">
                    <h5 class="modal-title" id="createAcademicTermModalLabel">New Academic Term</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label asp-for="NewAcademicTerm.Name" class="form-label fw-semibold"></label>
                        <input asp-for="NewAcademicTerm.Name" class="form-control" placeholder="Enter term name" />
                        <span asp-validation-for="NewAcademicTerm.Name" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="NewAcademicTerm.StartDate" class="form-label fw-semibold"></label>
                            <input asp-for="NewAcademicTerm.StartDate" type="date" class="form-control" />
                            <span asp-validation-for="NewAcademicTerm.StartDate" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="NewAcademicTerm.EndDate" class="form-label fw-semibold"></label>
                            <input asp-for="NewAcademicTerm.EndDate" type="date" class="form-control" />
                            <span asp-validation-for="NewAcademicTerm.EndDate" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="editAcademicTermModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <form method="post" asp-page-handler="Edit">
                <div class="modal-header bg-warning text-white">
                    <h5 class="modal-title">Edit Term</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                        aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" asp-for="EditAcademicTerm.Id" id="editId" />
                    <div class="mb-3">
                        <label asp-for="EditAcademicTerm.Name" class="form-label fw-semibold"></label>
                        <input asp-for="EditAcademicTerm.Name" class="form-control" id="editName" />
                        <span asp-validation-for="EditAcademicTerm.Name" class="text-danger small"></span>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="EditAcademicTerm.StartDate" class="form-label fw-semibold"></label>
                            <input asp-for="EditAcademicTerm.StartDate" type="date" class="form-control"
                                id="editStartDate" />
                            <span asp-validation-for="EditAcademicTerm.StartDate" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="EditAcademicTerm.EndDate" class="form-label fw-semibold"></label>
                            <input asp-for="EditAcademicTerm.EndDate" type="date" class="form-control"
                                id="editEndDate" />
                            <span asp-validation-for="EditAcademicTerm.EndDate" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="form-check mb-2">
                        <input asp-for="EditAcademicTerm.IsActive" type="checkbox" class="form-check-input"
                            id="editIsActive" />
                        <label asp-for="EditAcademicTerm.IsActive" class="form-check-label"></label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteAcademicTermModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <form method="post" asp-page-handler="Delete">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Delete Term</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                        aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id" id="deleteId" />
                    <p>Are you sure you want to delete the term "<span id="deleteName" class="fw-semibold"></span>"?
                    </p>
                    <p class="text-danger">This action cannot be undone!</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('.edit-btn').forEach(btn => {
                btn.addEventListener('click', function () {
                    document.getElementById('editId').value = this.dataset.id;
                    document.getElementById('editName').value = this.dataset.name;
                    document.getElementById('editStartDate').value = this.dataset.startdate;
                    document.getElementById('editEndDate').value = this.dataset.enddate;
                    document.getElementById('editIsActive').checked = this.dataset.isactive === 'True';
                });
            });

            document.querySelectorAll('.delete-btn').forEach(btn => {
                btn.addEventListener('click', function () {
                    document.getElementById('deleteId').value = this.dataset.id;
                    document.getElementById('deleteName').innerText = this.dataset.name;
                });
            });
        });
    </script>
}
