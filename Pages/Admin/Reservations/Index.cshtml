@page
@model ClassroomReservationSystem.Pages.Admin.Reservations.IndexModel
@{
    ViewData["Title"] = "Reservation Requests";
}

<div class="container mt-4">

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="table-responsive shadow rounded">
        <table class="table table-striped table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Classroom</th>
                    <th>Activity</th>
                    <th>Day</th>
                    <th>Term Start</th>
                    <th>Term End</th>
                    <th>Start Time</th>
                    <th>End Time</th>
                    <th>Status</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Reservations)
                {
                    var rowStyle = "";
                    var warnings = new List<string>();

                    if (item.HasConflict(Model.Context))
                    {
                        rowStyle = "background-color: #fff0f0;"; // Light red background
                        warnings.Add("Time conflict detected!");
                    }

                    if (Model.HolidayConflicts.ContainsKey(item.Id) && Model.HolidayConflicts[item.Id])
                    {
                        rowStyle += "border-left: 5px solid #dc3545;"; // Bootstrap red border
                        var conflictingDates = Model.GetHolidayConflictDates(item.Id);
                        warnings.Add($"Conflicts with holiday! ({string.Join(", ", conflictingDates.Select(d => d.ToString("dd/MM/yyyy")))})");
                    }

                    <tr style="@rowStyle">
                        <td>
                            @item.Classroom.Name
                            @if (warnings.Any())
                            {
                                <div class="mt-1">
                                    @foreach (var warning in warnings)
                                    {
                                        <span class="badge bg-danger text-wrap d-block mb-1" style="max-width: 220px;">
                                            <i class="bi bi-exclamation-triangle-fill me-1"></i>@warning
                                        </span>
                                    }
                                </div>
                            }
                        </td>
                        <td>@item.Activity</td>
                        <td>@item.DayOfWeek.ToString("G")</td>
                        <td>@item.TermStartDate.ToString("dd/MM/yyyy")</td>
                        <td>@item.TermEndDate.ToString("dd/MM/yyyy")</td>
                        <td>@($"{item.StartTime.Hours:D2}:{item.StartTime.Minutes:D2}")</td>
                        <td>@($"{item.EndTime.Hours:D2}:{item.EndTime.Minutes:D2}")</td>
                        <td>
                            <span class="badge @(item.Status switch {
                                "Approved" => "bg-success",
                                "Pending" => "bg-warning text-dark",
                                "Rejected" => "bg-danger",
                                "ModificationRequested" => "bg-info text-dark",
                                "CancellationRequested" => "bg-secondary",
                                _ => "bg-secondary"
                            }) text-uppercase px-3 py-2">
                                @item.Status.Replace("Requested", "")
                            </span>
                        </td>
                        <td class="text-end">
                            @if (item.Status == "Pending")
                            {
                                <div class="btn-group" role="group" aria-label="Pending actions">
                                    <form method="post" asp-page-handler="Approve" asp-route-id="@item.Id" class="me-1">
                                        <button type="submit" class="btn btn-sm btn-success" title="Approve">
                                            <i class="bi bi-check-lg"></i>
                                        </button>
                                    </form>
                                    <form method="post" asp-page-handler="Reject" asp-route-id="@item.Id">
                                        <button type="submit" class="btn btn-sm btn-danger" title="Reject">
                                            <i class="bi bi-x-lg"></i>
                                        </button>
                                    </form>
                                </div>
                            }
                            else if (item.Status == "ModificationRequested")
                            {
                                <div class="btn-group" role="group" aria-label="Modification actions">
                                    <form method="post" asp-page-handler="ApproveModification" asp-route-id="@item.Id" class="me-1">
                                        <button type="submit" class="btn btn-sm btn-success" title="Approve Modification">
                                            <i class="bi bi-check2-square"></i>
                                        </button>
                                    </form>
                                    <form method="post" asp-page-handler="RejectModification" asp-route-id="@item.Id">
                                        <button type="submit" class="btn btn-sm btn-danger" title="Reject Modification">
                                            <i class="bi bi-x-square"></i>
                                        </button>
                                    </form>
                                </div>
                            }
                            else if (item.Status == "CancellationRequested")
                            {
                                <div class="btn-group" role="group" aria-label="Cancellation actions">
                                    <form method="post" asp-page-handler="ApproveCancellation" asp-route-id="@item.Id" class="me-1">
                                        <button type="submit" class="btn btn-sm btn-success" title="Approve Cancellation">
                                            <i class="bi bi-check2-circle"></i>
                                        </button>
                                    </form>
                                    <form method="post" asp-page-handler="RejectCancellation" asp-route-id="@item.Id">
                                        <button type="submit" class="btn btn-sm btn-danger" title="Reject Cancellation">
                                            <i class="bi bi-x-circle"></i>
                                        </button>
                                    </form>
                                </div>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <nav aria-label="Page navigation example" class="mt-3" style="margin-bottom: 70px;">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                <a class="page-link" href="?pageNumber=@(Model.PageNumber - 1)" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                    <a class="page-link" href="?pageNumber=@i">@i</a>
                </li>
            }

            <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" href="?pageNumber=@(Model.PageNumber + 1)" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>

</div>
